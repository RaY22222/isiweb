</head>

<body>


    <div class="container-fluid">
        <div class="row">

            <div class="col-md-2 p-0" id="sidebar-wrapper">
                {% include 'navbar.twig' %}
            </div>


            <div class="col-md-10 ml-auto" id="content">
                <div class="container-fluid">
                    <br>
                    <div class="button-container">
                        <a href="path/to/view" class="company-action">
                            <img src="../../public/icons/rechercher.png" alt="Rechercher" />
                            <p>Rechercher un stagiaire existant</p>
                        </a>
                        <a href="path/to/view" class="company-action">
                            <img src="../../public/icons/ajouter.png" alt="Ajouter" />
